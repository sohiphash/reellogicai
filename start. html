<body>
  <div class="container">
    <h1>🎬 إنشاء فيديو تلقائي</h1>

    <label for="idea">💡 فكرة الفيديو:</label>
    <textarea id="idea" placeholder="اكتب فكرة الفيديو أو اتركها فارغة ليقترحها الذكاء الاصطناعي..."></textarea>

    <label for="platform">📱 اختر المنصة:</label>
    <select id="platform">
      <option>Instagram</option>
      <option>TikTok</option>
      <option>YouTube Shorts</option>
      <option>Facebook Reels</option>
    </select>

    <label for="language">🌐 اختر اللغة:</label>
    <select id="language">
      <option value="ar">العربية</option>
      <option value="en">الإنجليزية</option>
      <option value="fr">الفرنسية</option>
    </select>

    <button onclick="generateVideo()">🎥 إنشاء الفيديو الآن</button>

    <p id="result" style="margin-top:20px; color: green;"></p>

    <!-- زر تحميل -->
    <a id="download" href="https://www.w3schools.com/html/mov_bbb.mp4" download="reellogic-video.mp4">
      📥 تحميل الفيديو
    </a>
  </div>

  <script>
    function generateVideo() {
      const idea = document.getElementById('idea').value.trim();
      const platform = document.getElementById('platform').value;
      const language = document.getElementById('language').value;
      const result = document.getElementById('result');
      const download = document.getElementById('download');

      download.style.display = "none";

      if (idea === "") {
        result.innerText = "💡 جاري توليد فكرة باستخدام الذكاء الاصطناعي...";
        setTimeout(() => {
          result.innerText = "🎬 تم توليد فكرة: فيديو عن نصائح للنجاح على " + platform + " بلغة " + language;
          download.style.display = "inline-block";
        }, 2000);
      } else {
        result.innerText = "🎬 يتم الآن معالجة فكرتك: \"" + idea + "\" على منصة " + platform + " ...";
        setTimeout(() => {
          result.innerText = "✅ تم إنشاء الفيديو بنجاح! يمكنك تحميله الآن 👇";
          download.style.display = "inline-block";
        }, 2000);
      }
    }
  </script>
</body>
